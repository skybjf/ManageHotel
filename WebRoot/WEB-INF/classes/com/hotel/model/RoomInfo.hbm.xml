<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hotel.model.RoomInfo" table="room_info" catalog="hotel">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="roomNum" type="java.lang.String">
            <column name="roomNum" length="100" not-null="true" >
                <comment>图片标题</comment>
            </column>
        </property>
        <property name="roomTypeId" type="java.lang.String" not-null="true" >
            <column name="roomTypeId" length="50">
                <comment>图片发布时间</comment>
            </column>
        </property>
        <property name="state" type="java.lang.String" not-null="true" >
            <column name="state" length="50">
                <comment>图片发布时间</comment>
            </column>
        </property>
        <property name="roomTel" type="java.lang.String" not-null="true" >
            <column name="roomTel" length="50">
                <comment>图片发布时间</comment>
            </column>
        </property>
        <property name="remark" type="java.lang.String" not-null="true" >
            <column name="remark" length="50">
                <comment>图片发布时间</comment>
            </column>
        </property>
        <property name="delmark" type="java.lang.String" not-null="true" >
            <column name="delmark" length="50">
                <comment>图片发布时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
